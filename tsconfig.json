{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2015",
			"dom"
		],
		"outDir": "dist",
		"declaration": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"pretty": true
	},
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
